<EXO type="rouleaux">
  <CONSIGNE son="m6fl1_cons">Choisis la fin de la phrase qui convient.</CONSIGNE>
  <CONTENU>
    <rouleau texteSize="20" align="g518" alignY="h88">
      <liste>
        <item>Nous</item>
      </liste>
      <liste id="ld1" goodRep="1" align="center">
        <item>traversons le désert.</item>
        <item>traverse le désert.</item>
        <item>traversez le désert.</item>
      </liste>
    </rouleau>
    <rouleau texteSize="25" align="g115" alignY="h200">
      <liste>
        <item>Je</item>
      </liste>
      <liste id="ld2" goodRep="2" align="center">
        <item>sommes épuisés.</item>
        <item>suis épuisé.</item>
        <item>est épuisé.</item>
      </liste>
    </rouleau>
    <rouleau texteSize="25" align="g547" alignY="h260">
      <liste>
        <item>Tu</item>
      </liste>
      <liste id="ld3" goodRep="3" align="center">
        <item>avons très chaud.</item>
        <item>ont très chaud.  </item>
        <item>as très chaud.</item>
      </liste>
    </rouleau>
    <rouleau texteSize="25" align="g179" alignY="h368">
      <liste>
        <item>Elle</item>
      </liste>
      <liste id="ld4" goodRep="1" align="center">
        <item>attend la pluie.</item>
        <item>attendent la pluie.</item>
        <item>attendons la pluie.</item>
      </liste>
    </rouleau>
  </CONTENU>
