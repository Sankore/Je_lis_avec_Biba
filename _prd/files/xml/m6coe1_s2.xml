        <CELLULE id="diametre" son="m6coe1s2_cellule9">
          <message>Attention ! Tu as cliqué sur le mot "diamètre", pas sur le mot "diamant".</message>
        </CELLULE>
        <CELLULE id="diamine" son="m6coe1s2_cellule10">
